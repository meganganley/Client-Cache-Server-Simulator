<Window x:Class="Cache.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cache.GUI"
        mc:Ignorable="d"
        Title="Cache" Height="400" Width="350" ResizeMode="NoResize">
    
    <Grid Margin = "10, 5, 10, 20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="QueryFileNamesButton" Grid.Row="0" Content="Retrieve list of cached files" Click="QueryFileNamesButton_Click" Background="#FFD4E0FB"/>
        <ListBox x:Name="FilesListBox" Grid.Row="1"/>
        <Button x:Name="ClearCacheButton" Grid.Row="2" Content="Clear the contents of the cache" Click="ClearCacheButton_Click" Background="LightYellow"/>
        <Button x:Name="ViewLogButton" Grid.Row="3" Content="View log" Background="#FFEBCBF5" Click="ViewLogButton_Click"/>
    </Grid>
</Window>
