<Window x:Class="Client.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.GUI"
        mc:Ignorable="d"
        Title="Client" Height="400" Width="350" ResizeMode="NoResize">

    <Grid Margin = "10, 5, 10, 20">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="QueryFileNamesButton" Grid.Row="0" Content="Retrieve list of available files" Click="QueryFileNamesButton_Click" Background="#FFD4E0FB"/>
        <ListBox x:Name="FilesListBox" Grid.Row="1"/>
        <Button x:Name="DownloadFilesButton" Grid.Row="2" Content="Download selected file" Click="DownloadFilesButton_Click" Background="LightYellow"/>
        <Button x:Name="DisplayContentsButton" Grid.Row="3" Content="Display contents of selected file" Background="#FFEBCBF5" Click="DisplayContentsButton_Click"/>
    </Grid>
